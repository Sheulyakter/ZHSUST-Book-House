<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context="com.example.purnota.zhsustbookhouse.wellcome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ViewFlipper
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/v_flipper"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    >

                    <Button

                        android:layout_marginTop="3dp"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/colorAct"
                        android:id="@+id/CSEButton"
                        android:text="@string/cseString"
                        android:textSize="30sp"
                        android:drawableTop="@drawable/css"



                        />

                </LinearLayout>


                <LinearLayout


                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical">



                    <Button
                        android:layout_marginTop="3dp"
                        android:background="@color/colorGrass"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:id="@+id/EEEButton"
                        android:textColor="@color/colorAct"
                        android:text="@string/eeeString"
                        android:textSize="30sp"
                        android:drawableTop="@drawable/eeeee"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    >


                    <Button
                        android:layout_marginTop="3dp"
                        android:background="@color/colorFlpp"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:id="@+id/CHEButton"
                        android:textColor="@color/colorAct"
                        android:text="@string/cheString"
                        android:textSize="30sp"
                        android:drawableTop="@drawable/che"

                        />

                </LinearLayout>


            </LinearLayout>
            <!--secod row-->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    >

                    <Button

                        android:textAlignment="center"
                        android:layout_marginTop="3dp"
                        android:background="@color/colorAcp"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:textColor="@color/colorAct"
                        android:id="@+id/CIVILButton"
                        android:text="@string/cvString"
                        android:textSize="30sp"
                        android:drawableTop="@drawable/civi"


                        />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    >

                    <Button
                        android:layout_marginTop="3dp"
                        android:background="@color/colorBlueJeans"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:id="@+id/ENGButton"
                        android:textColor="@color/colorAct"
                        android:text="@string/engString"
                        android:textSize="30sp"
                        android:drawableTop="@drawable/engg"


                        />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    >

                    <Button
                        android:layout_marginTop="3dp"
                        android:background="@color/colorvlu"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:id="@+id/LAWButton"
                        android:textColor="@color/colorAct"
                        android:text="@string/lawString"
                        android:textSize="30sp"
                        android:drawableTop="@drawable/law"


                        />

                </LinearLayout>


            </LinearLayout>
            <!--secod row end-->

            <!--third row-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    >

                    <Button
                        android:layout_marginTop="3dp"
                        android:background="@color/colorAc"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:id="@+id/BBAButton"
                        android:textColor="@color/colorAct"
                        android:text="@string/bbaString"
                        android:textSize="30sp"
                        android:drawableTop="@drawable/bbaaa"


                        />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    >

                    <Button
                        android:layout_marginTop="3dp"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/colorAct"
                        android:id="@+id/ABOUTButton"
                        android:text="@string/aboutString"
                        android:textSize="15sp"



                        />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    >

                    <Button
                        android:layout_marginTop="3dp"
                        android:background="@color/colorFl"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/colorAct"
                        android:id="@+id/DEVELOPERButton"
                        android:text="@string/developerString"
                        android:textSize="13sp"


                        />

                </LinearLayout>

            </LinearLayout>
            <!--end third row-->

        </LinearLayout>

    </ScrollView>


</LinearLayout>